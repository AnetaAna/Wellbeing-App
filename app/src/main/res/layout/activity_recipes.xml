<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recipes">


    <ImageView
        android:id="@+id/honey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/honey" />


    <Button
        android:id="@+id/breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/waffles_smaller"
        android:onClick="ImageButtonClicked"
        android:text="BREAKFAST/DESSERT"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#DF4E4A"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/chicken_smaller"
        android:onClick="ImageButtonClicked"
        android:text="LUNCH/DINNER"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#2D47DC"
        android:textStyle="bold" />

    <Button
        android:id="@+id/vegeterian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakfast"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="58dp"
        android:backgroundTint="#63B122"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="VEGETERIAN"
        android:textStyle="bold" />

    <Button
        android:id="@+id/gluten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/breakfast"
        android:layout_alignParentRight="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#CA9B01"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="GLUTEN-FREE"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fruity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vegeterian"
        android:layout_marginStart="40dp"
        android:layout_marginTop="58dp"
        android:backgroundTint="#E11038"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="FRUITY"
        android:textStyle="bold" />


    <Button
        android:id="@+id/quick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vegeterian"
        android:layout_alignParentRight="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#FF3D00"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="QUICK AND EASY"
        android:textStyle="bold" />

    <Button
        android:id="@+id/italian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fruity"
        android:layout_marginStart="40dp"
        android:layout_marginTop="58dp"
        android:backgroundTint="#2C8C41"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="ITALIAN"
        android:textStyle="bold" />


    <Button
        android:id="@+id/indian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fruity"
        android:layout_alignParentRight="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#FF9100"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="INDIAN"
        android:textStyle="bold" />


    <Button
        android:id="@+id/meat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/italian"

        android:layout_centerInParent="true"
        android:layout_marginTop="56dp"
        android:backgroundTint="#31419F"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="MEAT AND SEAFOOD"
        android:textStyle="bold" />


</RelativeLayout>

