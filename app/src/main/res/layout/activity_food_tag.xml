<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.wellbeingapp.FoodTag"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/honey" />

    <ScrollView
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:fontFamily="@font/amaranth"
                android:paddingTop="30dp"
                android:layout_margin="20dp"
                android:text="TITLE"
                android:textAllCaps="true"
                android:textColor="#74B529"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_below="@+id/button_one"
                android:layout_marginBottom="15dp"/>


            <Button
                android:id="@+id/button_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/eggs_smaller"
                android:onClick="onClick"
                android:text="text"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#74B529"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="120dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/maple_smaller"
                android:text="text"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#74B529"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_one"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/mango_smaller"
                android:text="text"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#74B529"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_two"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/waffles_smaller"
                android:text="text"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#74B529"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible"/>

            <Button
                android:id="@+id/button_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_three"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/mango_smaller"
                android:text="text"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#74B529"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_four"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/waffles_smaller"
                android:text="text"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#74B529"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_six"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/pancake_smaller"
                android:text="Gluten-free one-cup pancakes"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#74B529"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible"/>




        </RelativeLayout>

    </ScrollView>

</FrameLayout>